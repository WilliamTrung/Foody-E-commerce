@model IEnumerable<ApplicationCore.Models.Order>

@{
    ViewData["Title"] = "Index";
}

<h1>Deleted Orders</h1>

<a asp-action="Index">Back to Orders</a>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.OrderDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RequiredDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ShippedDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Freight)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ShipAddress)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TotalPrice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Account)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            if (item.IsDeleted == true)
            {
                <tr>
                    <td>
                        @Convert.ToDateTime(item.OrderDate).ToString("dd/MM/yyyy")

                    </td>
                    <td>
                        @Convert.ToDateTime(item.RequiredDate).ToString("dd/MM/yyyy")
                    </td>
                    <td>
                        @Convert.ToDateTime(item.ShippedDate).ToString("dd/MM/yyyy")
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Freight)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ShipAddress)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TotalPrice)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Account.Address)
                    </td>
                    <td>
                        <a asp-action="DeletedOrderDetails" asp-route-id="@item.OrderId">Details</a>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>
